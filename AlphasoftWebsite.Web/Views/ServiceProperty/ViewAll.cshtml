@using System.Data.Entity.Core.Common.CommandTrees.ExpressionBuilder
@model IEnumerable<AlphasoftWebsite.Core.Model.ServiceProperty>
@{
    /**/

    ViewBag.Title = "ViewAll";
    Layout = null;
    int rowNo = 0;
}
<style>
    th{
        text-align: center
    }
</style>

<table class="table table-striped table-condensed table-bordered" id="servicePropertyTable" style="text-align: center">
    <thead>
    <tr>
        <th>
            SL
        </th>
        <th>
            Property Name
        </th>
        <th>
           Service
        </th>
        <th>
            Is Active
        </th>

        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td align="center" width="5%">
                    @(rowNo += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServicePropertyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.Service.ServiceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "ServiceProperty", new {id = @item.ServicePropertyId})')"><i class="fa fa-pencil fa-lg"></i></a>
                    <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "ServiceProperty", new {id = @item.ServicePropertyId})')"><i class="fa fa-trash fa-lg"></i></a>
                </td>
            </tr>
        }
    }

    </tbody>
</table>