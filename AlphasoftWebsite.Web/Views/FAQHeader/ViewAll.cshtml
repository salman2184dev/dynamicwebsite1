@model IEnumerable<AlphasoftWebsite.Core.Model.FAQHeader>
@{
    ViewBag.Title = "ViewAll";
    Layout = null;
    int rowNo = 0;
}
<style>
    th {
        text-align: center
    }
</style>
<table class="table table-striped table-condensed table-bordered" id="FAQHeaderTable"style="text-align: center">
    <thead>
    <tr>
        <th>
            SL
        </th>
        <th>
           FAQ Header Name
        </th>
        @*<th>
            FAQ Header Body
        </th>*@
        <th>
            Is Active
        </th>
        <th>
            Action
        </th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td align="center" width="5%">
                    @(rowNo += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FAQHeaderName)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.FAQHeaderBody)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "FAQHeader", new {id = @item.FAQHeaderId})')"><i class="fa fa-pencil fa-lg"></i></a>
                    <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "FAQHeader", new {id = @item.FAQHeaderId})')"><i class="fa fa-trash fa-lg"></i></a>
                </td>
            </tr>
        }
    }
    
    </tbody>
</table>