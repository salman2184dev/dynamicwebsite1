@model IEnumerable<AlphasoftWebsite.Core.Model.CompanySocialAccountDetail>
@{
    ViewBag.Title = "ViewAll";
    Layout = null;
    int rowNo = 0;
    
}
<style>
    th {
        text-align: center
    }
</style>
<table class="table table-striped table-condensed table-bordered" id="companySocialAccountDetailTable" style="text-align: center">
    <thead>
    <tr>
        <th>SL</th>
        <th>
            URL
        </th>

        <th>
            Company Name
        </th>
        <th>
            Social Account
        </th>
        <th>
            Is Active
        </th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td align="center" width="5%">
                    @(rowNo += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.URL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyDetail.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SocialAccountType.SocialAccountName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "CompanySocialAccountDetail", new {id = @item.CompanySocialAccountDetailId})')"><i class="fa fa-pencil fa-lg"></i></a>
                    <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "CompanySocialAccountDetail", new {id = @item.CompanySocialAccountDetailId})')"><i class="fa fa-trash fa-lg"></i></a>
                </td>
            </tr>
        }
    }
    
    </tbody>
</table>