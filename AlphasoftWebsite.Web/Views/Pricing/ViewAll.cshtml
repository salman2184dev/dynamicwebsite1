@model IEnumerable<AlphasoftWebsite.Core.Model.Pricing>
@{
    ViewBag.Title = "ViewAll";
    Layout = null;
    int rowNo = 0;
}
<style>
    th {
        text-align: center
    }
</style>
<table class="table table-striped table-condensed table-bordered" id="pricingTable"style="text-align: center">
    <thead>
        <tr>
            <th>SL</th>
            <th>
                Pricing  Header  Name
            </th>
            @*<th>
                Pricing  Body
            </th>*@
            <th>
                Is Active
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>

                    <td align="center" width="5%">
                        @(rowNo += 1)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PricingHeader)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.PricingBody)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "Pricing", new {id = @item.PricingID})')"><i class="fa fa-pencil fa-lg"></i></a>
                        <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "Pricing", new {id = @item.PricingID})')"><i class="fa fa-trash fa-lg"></i></a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>