@model IEnumerable<AlphasoftWebsite.Core.Model.BlogCategory>
@{
    ViewBag.Title = "ViewAll";
    Layout = null;
    int rowNo = 0;
}

<table class="table table-striped table-condensed table-bordered" id="blogCategoryTable">
    <thead>
    <tr>
        <th>
            SL
        </th>
        <th>
            Category Name
        </th>
        <th>
            Is Active
        </th>
        <th> Action</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td align="center" width="5%">
                    @(rowNo += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BlogCategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "BlogCategory", new {id = @item.BlogCategoryId})')"><i class="fa fa-pencil fa-lg"></i></a>
                    <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "BlogCategory", new {id = @item.BlogCategoryId})')"><i class="fa fa-trash fa-lg"></i></a>
                </td>
            </tr>
        }
    }

    </tbody>
</table>

