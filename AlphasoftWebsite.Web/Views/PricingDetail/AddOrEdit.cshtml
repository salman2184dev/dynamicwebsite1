@model AlphasoftWebsite.Core.Model.PricingDetail
@{
    ViewBag.Title = "AddOrEdit";
    Layout = null;
}
@using (Html.BeginForm("AddOrEdit", "PricingDetail", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("AddOrEdit", "PricingDetail", new { id = 0 }) }))//data-reset
{
    @Html.AntiForgeryToken()
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">
                            Pricing Detail
                        </h3>
                        <hr />
                        <div class="form-horizontal col-md-offset-1">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.PricingDetailID, new { id = "modelPricingDetailId" })
                            @Html.HiddenFor(model => model.CreatedDate)
                            @Html.HiddenFor(model => model.CreatedBy)


                            <input type="hidden" id="hiddenPricingDetailId" />
                            <div class="col-md-6">

                                <div class="form-group">
                                    @Html.LabelFor(model => model.PricingDetailQuantity, "Pricing Detail Quantity", new { @class = "control-label col-md-6" })
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.PricingDetailQuantity, new { htmlAttributes = new { @class = "form-control", @id = "PricingDetailQuantity", @maxLength = "50" } })
                                        @Html.ValidationMessageFor(model => model.PricingDetailQuantity)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-6">Pricing Table</label>
                                    <div class="col-md-6">
                                        <select id="ddlPricingTableType" name="PricingTableTypeId" class="form-control select2" style="width: 84%">
                                            <option></option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-6">Pricing Detail</label>
                                    <div class="col-md-6">
                                        <select id="ddlPricingDetailType" name="PricingDetailTypeId" class="form-control select2" style="width: 84%">
                                            <option></option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.IsActive,"Is Active", new { @class = "control-label col-md-6" })
                                    <div class="col-md-6">
                                        @Html.CheckBoxFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.IsActive)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-6 col-md-6">
                                        <input type="submit" value="Submit" class="btn btn-success" />
                                        @if (Model.PricingDetailID != 0)
                                        {
                                            <a class="btn btn-default" onclick="refreshAddNewTab('@Url.Action("AddOrEdit","PricingDetail",new{id=0})', false)"><i class="fa fa-plus"></i> Add New</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}



