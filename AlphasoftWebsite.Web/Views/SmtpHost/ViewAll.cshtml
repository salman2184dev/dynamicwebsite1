@using System.Configuration
@model IEnumerable<AlphasoftWebsite.Core.Model.SmtpHost>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
    int rowNo = 0;
}

<table class="table table-striped table-condensed table-bordered" id="smtpHostTable">
    <thead>
        <tr>
            <th>
                SL
            </th>
            <th>
                Email ID
            </th>
            @*<th>
                Host
            </th>
            <th>
                Port
            </th>*@
            @*<th>
                EnableSsl
            </th>*@
            <th>
                Is Active Email ID
                @*@Html.DisplayNameFor(model => model.IsActiveUserName)*@
            </th>
            <th> Action</th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
        <tr>
            <td align="center" width="5%">
                @(rowNo += 1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.HostName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PortName)
            </td>*@
            @*<td>
                @Html.DisplayFor(modelItem => item.EnableSsl)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.IsActiveUserName)
            </td>
            <td>
                <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "SmtpHost", new {id = @item.SmtpHostId})')"><i class="fa fa-pencil fa-lg"></i></a>
                <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "SmtpHost", new {id = @item.SmtpHostId})')"><i class="fa fa-trash fa-lg"></i></a>
            </td>
        </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="6">
                No data available!
            </td>
        </tr>
    }

    </tbody>
</table>




