@model AlphasoftWebsite.Core.Model.FeatureDetail
@{
    ViewBag.Title = "AddOrEdit";
    Layout = null;
}
@using (Html.BeginForm("AddOrEdit", "FeatureDetail", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("AddOrEdit", "FeatureDetail", new { id = 0 }) }))//data-reset
{
    @Html.AntiForgeryToken()
    <section class="content">
    <div class="row">
    <div class="col-md-12">
    <div class="box box-info">
    <div class="box-header">
        <h3 class="box-title">
            Feature Detail
        </h3>
        <hr />
        <div class="form-horizontal col-md-offset-2">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.FeatureDetailId, new { id = "modelFeatureDetailId" })
            @Html.HiddenFor(model => model.CreatedDate)
            @Html.HiddenFor(model => model.CreatedBy)


            <input type="hidden" id="hiddenFeatureDetailId" />
            <div class="col-md-6">

                <div class="form-group">
                    @Html.LabelFor(model => model.FeatureDetailTitle, "Feature Detail Name", new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.FeatureDetailTitle, new { htmlAttributes = new { @class = "form-control",@id= "featureDetailName",@maxLength = "50" } })
                        @Html.ValidationMessageFor(model => model.FeatureDetailTitle)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FeatureDetailDescription, "Feature Description", new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.FeatureDetailDescription, new { htmlAttributes = new { @class = "form-control",@id= "description", @maxLength = "250" }, @rows = "6", @cols = "50" })
                        @Html.ValidationMessageFor(model => model.FeatureDetailDescription)
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-4">Icon</label>
                    <div class="col-md-8">
                        <select id="ddlIcon" name="IconId" class="form-control select2" style="width: 68%">
                            <option></option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsActive,"Is Active", new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IsActive)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="submit" value="Submit" class="btn btn-success" />
                        @if (Model.FeatureDetailId != 0)
                        {
                            <a class="btn btn-default" onclick="refreshAddNewTab('@Url.Action("AddOrEdit","FeatureDetail",new{id=0})', false)"><i class="fa fa-plus"></i> Add New</a>
                        }
                    </div>
                </div>
            </div>
        </div>
        </div>  
        </div>
        </div>
    </div>
    </section>
}





