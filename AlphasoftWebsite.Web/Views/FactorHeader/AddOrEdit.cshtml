@model AlphasoftWebsite.Core.Model.FactorHeader
@{
    ViewBag.Title = "AddOrEdit";
    Layout = null;
}
@using (Html.BeginForm("AddOrEdit", "FactorHeader", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("AddOrEdit", "FactorHeader", new { id = 0 }) }))//data-reset
{
    @Html.AntiForgeryToken()
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">
                            Factor Header
                        </h3>
                        <hr />
                        <div class="form-horizontal col-md-offset-2">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.FactorHeaderId)
                            @Html.HiddenFor(model => model.CreatedDate)
                            @Html.HiddenFor(model => model.CreatedBy)



                            <div class="form-group">
                                @Html.LabelFor(model => model.FactorHeaderName, "Factor Header Name", new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.FactorHeaderName, new { htmlAttributes = new { @class = "form-control", @id = "FactorHeaderName" } })
                                    @Html.ValidationMessageFor(model => model.FactorHeaderName)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.FactorHeaderBody, "Factor Header Body", new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.TextAreaFor(model => model.FactorHeaderBody, new { htmlAttributes = new { @class = "form-control", @id = "FactorHeaderBody" }, @rows = "6", @cols = "50" })
                                    @Html.ValidationMessageFor(model => model.FactorHeaderBody)
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.CheckBoxFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.IsActive)
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-9">
                                    <input type="submit" value="Submit" class="btn btn-success" />
                                    @if (Model.FactorHeaderId != 0)
                                    {
                                        <a class="btn btn-default" onclick="refreshAddNewTab('@Url.Action("AddOrEdit","FactorHeader",new{id=0})', false)"><i class="fa fa-plus"></i> Add New</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}