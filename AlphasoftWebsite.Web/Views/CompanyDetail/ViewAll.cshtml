@using System.Configuration
@model IEnumerable<AlphasoftWebsite.Core.Model.CompanyDetail>
@{
    var imagestring = ConfigurationManager.AppSettings["CompanyImage"];
}
@{
    ViewBag.Title = "ViewAll";
    Layout = null;
    int rowNo = 0;
}
<style>
    th {
        text-align: center
    }
</style>

<table class="table table-striped table-condensed table-bordered" id="companyDetailTable" style="text-align: center">
    <thead>
    <tr>
        <th>
            SL
        </th>
        <th>
            Company Name
        </th>
        <th>
            Email
        </th>
        <th>
            Phone/Fax
        </th>
        <th>
            Address
        </th>

        <th>
            Image
        </th>
        <th>
            Is Active
        </th>
        <th> Action</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td align="center" width="5%">
                    @(rowNo += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyFax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyAddress)
                </td>

                <td  align ="center">
                        
                    @if (item.CompanyImage != null)
                    {
                        string image = imagestring + item.CompanyImage;
                        // <img onerror="this.src='@Url.Content("../../Image/HomeBanner/image-icon.png")';" width="50" height="50" />
                        <img id="img_companyImage" width="250" height="150" class="thumbnail" src = '@Url.Content(image)' alt="Missing Image"/>
                    }
                    else
                    {
                        <label style="color: red">Image is not Available</label>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "CompanyDetail", new {id = @item.CompanyId})')"><i class="fa fa-pencil fa-lg"></i></a>
                    <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "CompanyDetail", new {id = @item.CompanyId})')"><i class="fa fa-trash fa-lg"></i></a>
                </td>
            </tr>
        }
    }

    </tbody>
</table>

